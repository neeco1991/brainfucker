---
import { useTranslations } from '../lib/i18n';
import LanguageSelector from './LanguageSelector.tsx';
import ThemeSelector from './ThemeSelector.tsx';

const { lang } = Astro.params;
const t = useTranslations(lang as 'en' | 'it');

const subtitle = t('header.subtitle');
---

<div class="sm:relative">
  <a href={`/${lang}`}>
    <h1
      class="text-3xl font-bold tracking-tight sm:text-8xl text-red-500 select-none"
    >
      Brainfucker
    </h1>
  </a>
  <p class="mt-2 text-lg leading-8 prose dark:prose-invert">{subtitle}</p>
  <div
    class="absolute top-4 right-2 sm:top-0 sm:right-0 flex flex-col items-center gap-2"
  >
    <ThemeSelector client:only />
    <LanguageSelector client:load />
  </div>
</div>

<style>
  h1 {
    font-family: 'Rubik';
  }
</style>
